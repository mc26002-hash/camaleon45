<div>
    <h3>Dividir Números</h3>
</div>

<div class="card-body">
    <form method="post">
        <div class="mb-3">
            <label>Número 1</label>
            <input type="number" step="any" name="num1" class="form-control" required />
        </div>

        <div class="mb-3">
            <label>Número 2</label>
            <input type="number" step="any" name="num2" class="form-control" required />
        </div>

        <button type="submit">
            Calcular
        </button>
    </form>

    @if (ViewBag.Resultado != null)
    {
        <div class="alert alert-info mt-4 text-center">
            <strong>Resultado:</strong> @ViewBag.Resultado
        </div>
    }

    <a asp-action="Index">Volver</a>
</div>


